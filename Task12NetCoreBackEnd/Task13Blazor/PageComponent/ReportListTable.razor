<div class="table-responsive">
    <table class="table table-striped table-primary text-center">
        <thead>
            <tr>
                <th class="col-5">Description</th>
                <th class="col-2"><span class="text-success">Money</span></th>
                <th class="col-2"><span class="text-info">Date</span></th>
            </tr>
        </thead>
        <tbody>
            @if (Report == null)
            {
                <tr>
                    <th>No item in array</th>
                </tr>
            }
            else
            {
                if (Report.Operations != null && Report.Operations.Count != 0)
                {

                    @foreach (var item in Report.Operations)
                    {
                        <tr>
                            <th>@item.Description</th>
                            <th>@item.Money</th>
                            <th>@item.Date.ToString("dd.MM.yyyy")</th>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <th>No Money Operations</th>
                    </tr>
                }
            }
        </tbody>
        <tfoot>
            @if (Report == null)
            {
                <tr>
                <th class="col-6">Total Icome: <span class="text-success">0</span></th>
                <th class="col-6">Total Uncome: <span class="text-danger">0</span> </th>
            </tr>
            }
            else
            {
                
            <tr>
                <th class="col-6">Total Icome: <span class="text-success">@Report.TotalIncome</span></th>
                <th class="col-6">Total Uncome: <span class="text-danger">@Report.TotalOutcome</span> </th>
            </tr>
            }
        </tfoot>
    </table>
</div>
